[user]
  name = Frode Aannevik
  email = frode.aa@gmail.com

[sendemail]
  smtpserver = /usr/local/bin/msmtp
  assume8bitEncoding = true
  confirm = auto

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  gg = grep --break --heading -n
  unpushed = log --stat origin/master..HEAD
  fc = commit --amend -m
  fo = log --pretty=oneline --shortstat --abbrev-commit
  ci = commit
  co = checkout
  st = status
  df = diff
  dlc = diff --cached HEAD^
  br = branch
  log = log --date=local
  lg = log -p
  lgs = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  log1 = log --pretty=oneline --abbrev-commit
  lgr = log --graph --pretty=oneline --abbrev-commit
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  lg1 =log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  slacklg = log --graph --pretty=format:'%ad %Cgreen%aN: %Creset %s' --abbrev-commit 
  staged = diff --cached
  unstage = reset HEAD
  ignore = !echo "$@" >> .gitignore
  serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
  news = log -p HEAD@{1}..HEAD@{0}
  pullit = !pullit.sh
  find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
  show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort

[push]
  default = simple
[core]
  excludesfile = ~/.gitignore
  editor = /usr/local/bin/vim 
[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true

