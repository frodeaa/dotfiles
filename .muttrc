set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp

set folder      = ~/mail/frodeaa
set spoolfile   = "+INBOX"
set mbox        = "+archive"
set postponed   = "+drafts"
unset record

mailboxes +INBOX

macro index D \
    "<save-message>+trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+spam<enter>" \
    "mark message as spam"
